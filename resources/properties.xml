<resources>

    <properties>
    	<property id="pHR" type="number">0</property>
    	<property id="pPace" type="number">0</property>
      <property id="pFL" type="number">1</property>
      <property id="pFR" type="number">0</property>
      <property id="pTimer" type="number">3599</property>
	</properties>

    <strings>
       <string id="AppName">Flexirunner</string>
       <string id="AppVersion">1.1.0</string>
       <string id="lHR">Heart rate display</string>
       <string id="eHR1">Show heart rate in BPM</string>
       <string id="eHR2">Show as decimal zone (e.g. 4.3)</string>
       <string id="eHR3">Show heart rate (BPM) and zone together</string>
       <string id="lPace">Target pace metric</string>
       <string id="lFL">Bottom left field</string>
       <string id="lFR">Bottom right field</string>
       <string id="lTimer">Show times as MM:SS up to</string>
       <string id="eTimer1">59:59</string>
       <string id="eTimer2">99:59</string>
       <string id="ePace1">Overall average pace</string>
       <string id="ePace2">Moving (running) pace</string>
       <string id="ePace3">Current lap pace</string>
       <string id="ePace4">Current lap moving (running) pace</string>
       <string id="ePace5">Last lap pace</string>
       <string id="ePace6">Last lap moving (running) pace</string>
    </strings>

    <settings>
    	<setting propertyKey="@Properties.pHR" title="@Strings.lHR">
    		<settingConfig type="list" required="true">
    			<listEntry value="0">@Strings.eHR1</listEntry>
    			<listEntry value="1">@Strings.eHR2</listEntry>
    			<listEntry value="2">@Strings.eHR3</listEntry>
    		</settingConfig>
    	</setting>

    	<setting propertyKey="@Properties.pPace" title="@Strings.lPace">
    		<settingConfig type="list" required="true">
    			<listEntry value="0">@Strings.ePace1</listEntry>
    			<listEntry value="1">@Strings.ePace2</listEntry>
    			<listEntry value="2">@Strings.ePace3</listEntry>
    			<listEntry value="3">@Strings.ePace4</listEntry>
    			<listEntry value="4">@Strings.ePace5</listEntry>
    			<listEntry value="5">@Strings.ePace6</listEntry>
    		</settingConfig>
    	</setting>

      <setting propertyKey="@Properties.pFL" title="@Strings.lFL">
        <settingConfig type="list" required="true">
          <listEntry value="0">@Strings.ePace1</listEntry>
          <listEntry value="1">@Strings.ePace2</listEntry>
          <listEntry value="2">@Strings.ePace3</listEntry>
          <listEntry value="3">@Strings.ePace4</listEntry>
          <listEntry value="4">@Strings.ePace5</listEntry>
          <listEntry value="5">@Strings.ePace6</listEntry>
        </settingConfig>
      </setting>

      <setting propertyKey="@Properties.pFR" title="@Strings.lFR">
        <settingConfig type="list" required="true">
          <listEntry value="0">@Strings.ePace1</listEntry>
          <listEntry value="1">@Strings.ePace2</listEntry>
          <listEntry value="2">@Strings.ePace3</listEntry>
          <listEntry value="3">@Strings.ePace4</listEntry>
          <listEntry value="4">@Strings.ePace5</listEntry>
          <listEntry value="5">@Strings.ePace6</listEntry>
        </settingConfig>
      </setting>

      <setting propertyKey="@Properties.pTimer" title="@Strings.lTimer">
        <settingConfig type="list" required="true">
          <listEntry value="3599">@Strings.eTimer1</listEntry>
          <listEntry value="5999">@Strings.eTimer2</listEntry>
        </settingConfig>
      </setting>
    </settings>

    <bitmap id="LauncherIcon" filename="launcher_icon.png"></bitmap></resources>
